{
  "name": "snake-rodeo-agents",
  "version": "3.0.0",
  "type": "module",
  "description": "Standalone library for playing the Trifle Snake Rodeo game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib/*": "./dist/lib/*"
  },
  "bin": {
    "snake-rodeo-agents": "./dist/bin/play.js",
    "snake-rodeo-simulate": "./dist/bin/simulate.js"
  },
  "scripts": {
    "build": "tsc",
    "play": "node dist/bin/play.js",
    "simulate": "node dist/bin/simulate.js"
  },
  "dependencies": {
    "viem": "^2.45.3"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trifle-labs/snake-rodeo-agents"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  }
}
